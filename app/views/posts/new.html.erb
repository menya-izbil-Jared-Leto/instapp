<h2>New post</h2>

<%= form_for @post, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :image %> <br>
    <%= f.file_field :image %>
  </p>
  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: "form-control", style:"width: 525.6px;"%>
  </div>

  <p>
    <%= f.submit "Save", class: "btn btn-success" %>
  </p>
<% end %>

