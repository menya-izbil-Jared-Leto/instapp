<h2>Following</h2>
<% @account.following.each do |following| %>
    <div class="follows">
        <div class="row">
            <div class="col-sm-3 col-lg-2">
                <%= link_to profile_picture(following, 'pp-post'), profile_path(following.username) %>
                <strong><%= link_to following.username, profile_path(following.username), class: "text-dark"%></strong>
            </div>
            <div class="col-sm-9 col-lg-10">
                <% if current_account.following?(following) %>
                    <%= form_tag unfollow_account_path(following), method: :post, class:"float-right" do %>
                        <%= hidden_field_tag :follow_id, following.id %>
                        <%= submit_tag "Unfollow", class: "btn btn-danger btn-sm" %>
                    <% end %>
                <% end %>

            </div>
        </div>
    </div>
<% end %>
